<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.example.aunik.roadcondition2.CommentActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:id="@+id/commentTxt" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" android:hint="Your comment"/>
    <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/conditionRatingBar"
            android:layout_below="@+id/imageBtn" android:layout_toRightOf="@+id/textView3"
            android:layout_toEndOf="@+id/textView3" android:layout_marginTop="11dp"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageBtn"
            android:background="@android:drawable/ic_menu_camera"
            android:layout_below="@+id/commentTxt" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
    <TextView
            android:text="Codition:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:textSize="18sp"
            android:layout_marginTop="14dp" android:layout_alignTop="@+id/conditionRatingBar"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
    <Button
            android:text="Post"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/postBtn"
            android:layout_below="@+id/textView3" android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>
</RelativeLayout>
